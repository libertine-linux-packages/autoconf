				sed -i \
					-e 's;! /bin/cat;!'"$shaBangCat"';g' \
					-e 's;AC_CHECK_PROG(CC, cc, cc, , , /usr/ucb/cc);AC_CHECK_PROG(CC, cc, cc);g' \
					-e 's;/|./|.//|/etc/\*|/usr/sbin/\*|/usr/etc/\*|/sbin/\*|/usr/afsws/bin/\*|/usr/ucb/\*;/|./|.//|/usr/bin/*;g' \
